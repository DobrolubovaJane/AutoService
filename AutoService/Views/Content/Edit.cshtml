@model AutoService.ViewModels.Content.ItemEditViewModel

<div class="row">
    <div class="col-md-offset-3 col-lg-offset-3 col-sm-offset-2">
        @Html.ValidationSummary(true)
    </div>
</div>

@using (Html.BeginForm("Create", "Content", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "createUserForm", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-4 col-sm-4 col-xs-2 control-label required" })
                <div class="col-md-8 col-sm-8 col-xs-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-md-4 col-sm-4 col-xs-2 control-label" })
                <div class="col-md-8 col-sm-8 col-xs-10">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-4 col-sm-4 col-xs-2 control-label" })
                <div class="col-md-8 col-sm-8 col-xs-10">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.isActive, new { @class = "col-md-4 col-sm-4 col-xs-2 control-label" })
                <div class="col-md-8 col-sm-8 col-xs-10">
                    @Html.CheckBoxFor(m => m.isActive)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-sm-8 col-xs-10 col-md-offset-3 col-sm-offset-3">
                    @Html.Partial("UploadFiles")
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary col-lg-2 col-lg-offset-5 col-md-2 col-md-offset-5 col-sm-4 col-sm-offset-5 col-xs-5 col-xs-offset-2" onclick="return validateForm()">Добавить</button>
            <a href="/Content/Index" class="btn btn-default col-md-1 col-lg-1 col-xs-2 col-sm-2" role="button">Отмена</a>
        </div>
    </div>

}