@using AutoService.DAL.Models
@model Item
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Подробности";
}

<div class="container">
    <div class="row">
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-1 col-sm-1 col-lg-2 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 control-label" })
            <div class="col-md-4 col-sm-4 col-lg-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Price, new { @class = "col-md-1 col-sm-1 col-lg-2 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 control-label" })
            <div class="col-md-4 col-sm-4 col-lg-4">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-1 col-sm-1 col-lg-2 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 control-label" })
            <div class="col-md-4 col-sm-4 col-lg-4">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-8 col-sm-8 col-xs-10 col-md-offset-3 col-sm-offset-3">
                @Html.Partial("ShowItemImages", Model)
            </div>
        </div>
    </div>
</div>
